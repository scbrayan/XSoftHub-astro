---
// Header component with main navigation and side menu
import { useTranslations } from "../i18n/utils";
import LanguageSwitcher from "./LanguageSwitcher.astro";
import { Arrow } from "../components/icons/ui";
import { Phone, Email, Location } from "../components/icons/contact";
import type { OptionalLanguageProps } from "../types";

interface Props extends OptionalLanguageProps {}

const { lang = "es" } = Astro.props;
const t = useTranslations(lang);
---

<!-- Start Header Section -->
<header class="cs-site_header cs-style1 text-uppercase cs-sticky_header">
  <div class="cs-main_header">
    <div class="container">
      <div class="cs-main_header_in">
        <div class="cs-main_header_left">
          <a class="cs-site_branding" href={`/${lang}`}>
            <img
              src="/assets/img/logos/xsofthub-consults.png"
              alt="XSoftHub Ventures Logo"
            />
          </a>
        </div>
        <div class="cs-main_header_center">
          <!-- Navigation menu can be added here -->
          <LanguageSwitcher lang={lang} />
        </div>
        <div class="cs-main_header_right">
          <div class="cs-toolbox">
            <span class="cs-icon_btn">
              <span class="cs-icon_btn_in">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
              </span>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Side Header/Menu -->
<div class="cs-side_header">
  <button class="cs-close"></button>
  <div class="cs-side_header_overlay"></div>
  <div class="cs-side_header_in">
    <div class="cs-side_header_shape"></div>
    <a class="cs-site_branding" href={`/${lang}`}>
      <img
        src="/assets/img/logos/xsofthub-consults.png"
        alt="XSoftHub Ventures Logo"
      />
    </a>

    <div class="cs-side_header_box">
      <h2
        class="cs-side_header_heading"
        set:html={t("header.project.question")}
      />
      <p class="cs-side_header_subtitle">{t("header.project.description")}</p>
      <div class="cs-height_25"></div>
      <a href="#contact" class="cs-text_btn">
        <span>{t("header.project.cta")}</span>
        <Arrow width={26} height={12} />
      </a>
    </div>

    <div class="cs-side_header_box">
      <h3 class="cs-side_header_title cs-primary_color">
        {t("header.contact.title")}
      </h3>
      <ul class="cs-contact_info cs-style1 cs-mp0">
        <li>
          <Phone />
          <span>{t("header.contact.phone")}</span>
        </li>
        <li>
          <Email />
          <span>{t("header.contact.email")}</span>
        </li>
        <li>
          <Location />
          <span set:html={t("header.contact.address")} />
        </li>
      </ul>
    </div>

    <div class="cs-side_header_box">
      <!-- Additional content can be added here -->
    </div>

    <div class="cs-side_header_box">
      <!-- Additional content can be added here -->
    </div>
  </div>
</div>
<!-- End Header Section -->
