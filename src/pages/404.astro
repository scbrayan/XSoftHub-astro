---
import Layout from "../layouts/Layout.astro";
import { useTranslations, getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url) || "es";
const t = useTranslations(lang);
---

<Layout
  title={`${t("404.title")} | XSoftHub`}
  description={t("404.description")}
  lang={lang}
>
  <!-- Start 404 Section -->
  <section class="cs-error_page cs-style1">
    <div class="cs-height_90 cs-height_lg_80"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <div class="cs-error_content">
            <div class="cs-error_number">404</div>
            <h2
              class="cs-error_title cs-font_64 cs-white_color cs-semi_bold cs-m0"
            >
              {t("404.title")}
            </h2>
            <div class="cs-height_25 cs-height_lg_25"></div>
            <p
              class="cs-error_subtitle cs-font_18 cs-line_height_26 cs-white_color cs-opacity_7"
            >
              {t("404.description")}
            </p>
            <div class="cs-height_35 cs-height_lg_30"></div>
            <div class="cs-btn_group">
              <a href={`/${lang}/`} class="cs-btn cs-style1 cs-type1">
                <span>{t("404.home.button")}</span>
                <svg
                  width="26"
                  height="12"
                  viewBox="0 0 26 12"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M25.5303 6.53033C25.8232 6.23744 25.8232 5.76256 25.5303 5.46967L20.7574 0.696699C20.4645 0.403806 19.9896 0.403806 19.6967 0.696699C19.4038 0.989593 19.4038 1.46447 19.6967 1.75736L23.9393 6L19.6967 10.2426C19.4038 10.5355 19.4038 11.0104 19.6967 11.3033C19.9896 11.5962 20.4645 11.5962 20.7574 11.3033L25.5303 6.53033ZM0 6.75H25V5.25H0V6.75Z"
                    fill="currentColor"></path>
                </svg>
              </a>
              <a href={`/${lang}/#contact`} class="cs-btn cs-style1">
                <span>{t("404.contact.button")}</span>
                <svg
                  width="26"
                  height="12"
                  viewBox="0 0 26 12"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M25.5303 6.53033C25.8232 6.23744 25.8232 5.76256 25.5303 5.46967L20.7574 0.696699C20.4645 0.403806 19.9896 0.403806 19.6967 0.696699C19.4038 0.989593 19.4038 1.46447 19.6967 1.75736L23.9393 6L19.6967 10.2426C19.4038 10.5355 19.4038 11.0104 19.6967 11.3033C19.9896 11.5962 20.4645 11.5962 20.7574 11.3033L25.5303 6.53033ZM0 6.75H25V5.25H0V6.75Z"
                    fill="currentColor"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="cs-error_thumb">
            <div class="cs-error_thumb_in">
              <div class="cs-error_img">
                <svg
                  width="400"
                  height="300"
                  viewBox="0 0 400 300"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <!-- Ilustración SVG minimalista para 404 -->
                  <circle
                    cx="200"
                    cy="150"
                    r="120"
                    fill="none"
                    stroke="#FF6B6B"
                    stroke-width="3"
                    opacity="0.3"></circle>
                  <circle
                    cx="200"
                    cy="150"
                    r="80"
                    fill="none"
                    stroke="#4ECDC4"
                    stroke-width="2"
                    opacity="0.5"></circle>
                  <circle
                    cx="200"
                    cy="150"
                    r="40"
                    fill="none"
                    stroke="#45B7D1"
                    stroke-width="2"
                    opacity="0.7"></circle>

                  <!-- Elementos decorativos -->
                  <path
                    d="M150 120 L180 150 L150 180"
                    stroke="#FF6B6B"
                    stroke-width="3"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"></path>
                  <path
                    d="M250 120 L220 150 L250 180"
                    stroke="#FF6B6B"
                    stroke-width="3"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"></path>

                  <!-- Puntos decorativos -->
                  <circle cx="120" cy="100" r="4" fill="#4ECDC4" opacity="0.6"
                  ></circle>
                  <circle cx="280" cy="100" r="4" fill="#45B7D1" opacity="0.6"
                  ></circle>
                  <circle cx="120" cy="200" r="4" fill="#45B7D1" opacity="0.6"
                  ></circle>
                  <circle cx="280" cy="200" r="4" fill="#4ECDC4" opacity="0.6"
                  ></circle>

                  <!-- Líneas de conexión -->
                  <line
                    x1="120"
                    y1="100"
                    x2="150"
                    y2="120"
                    stroke="#4ECDC4"
                    stroke-width="1"
                    opacity="0.4"></line>
                  <line
                    x1="280"
                    y1="100"
                    x2="250"
                    y2="120"
                    stroke="#45B7D1"
                    stroke-width="1"
                    opacity="0.4"></line>
                  <line
                    x1="120"
                    y1="200"
                    x2="150"
                    y2="180"
                    stroke="#45B7D1"
                    stroke-width="1"
                    opacity="0.4"></line>
                  <line
                    x1="280"
                    y1="200"
                    x2="250"
                    y2="180"
                    stroke="#4ECDC4"
                    stroke-width="1"
                    opacity="0.4"></line>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="cs-height_90 cs-height_lg_80"></div>
  </section>
  <!-- End 404 Section -->

  <!-- Scroll up button -->
  <span class="cs-scrollup">
    <svg
      width="20"
      height="20"
      viewBox="0 0 20 20"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M0 10L1.7625 11.7625L8.75 4.7875V20H11.25V4.7875L18.225 11.775L20 10L10 0L0 10Z"
        fill="currentColor"></path>
    </svg>
  </span>
</Layout>

<style>
  /* Estilos específicos para la página 404 */
  .cs-error_page {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, #181818 0%, #2c2c2c 50%, #181818 100%);
    overflow: hidden;
  }

  .cs-error_page::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
        circle at 30% 20%,
        rgba(255, 107, 107, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 70% 80%,
        rgba(78, 205, 196, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 50% 50%,
        rgba(69, 183, 209, 0.05) 0%,
        transparent 70%
      );
    z-index: 1;
  }

  .cs-error_page .container {
    position: relative;
    z-index: 2;
  }

  .cs-error_content {
    text-align: left;
  }

  .cs-error_number {
    font-size: 120px;
    font-weight: 700;
    color: #ff6b6b;
    line-height: 1;
    margin-bottom: 20px;
    font-family: "Poppins", sans-serif;
    text-shadow: 0 0 30px rgba(255, 107, 107, 0.3);
  }

  .cs-error_title {
    color: #fefefe !important;
    margin-bottom: 0;
    font-size: 48px;
    font-weight: 600;
  }

  .cs-error_subtitle {
    color: rgba(254, 254, 254, 0.7) !important;
    font-size: 18px;
    line-height: 1.6;
    margin-bottom: 0;
  }

  .cs-error_thumb {
    text-align: center;
    padding: 40px 0;
  }

  .cs-error_thumb_in {
    position: relative;
    display: inline-block;
  }

  .cs-error_img {
    animation: float 6s ease-in-out infinite;
  }

  .cs-btn_group {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
  }

  .cs-btn_group .cs-btn {
    min-width: 160px;
  }

  /* Animación flotante para la ilustración */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  /* Responsive */
  @media (max-width: 991px) {
    .cs-error_number {
      font-size: 80px;
    }

    .cs-error_title {
      font-size: 36px;
    }

    .cs-error_thumb {
      margin-top: 40px;
      padding: 20px 0;
    }

    .cs-btn_group {
      justify-content: center;
    }

    .cs-error_content {
      text-align: center;
    }
  }

  @media (max-width: 575px) {
    .cs-error_number {
      font-size: 60px;
    }

    .cs-error_title {
      font-size: 28px;
    }

    .cs-error_subtitle {
      font-size: 16px;
    }

    .cs-btn_group {
      flex-direction: column;
      align-items: center;
    }

    .cs-btn_group .cs-btn {
      width: 100%;
      max-width: 250px;
    }
  }
</style>
