---
import ServicePage from "../../../components/ServicePage.astro";
import { getStaticPaths } from "../../../i18n/utils";
import type { SupportedLanguage } from "../../../types";

export { getStaticPaths };

const { lang } = Astro.params;
const currentLang = lang as SupportedLanguage;

const content = {
  es: {
    title: "Marketing Digital",
    subtitle: "Estrategias digitales que impulsan tu crecimiento",
    description:
      "Desarrollamos estrategias de marketing digital integrales que conectan tu marca con tu audiencia objetivo. Nuestro enfoque data-driven combina creatividad con análisis profundo para maximizar el ROI de tus campañas. Desde SEO y SEM hasta marketing en redes sociales y email marketing, creamos ecosistemas digitales que generan leads cualificados y aumentan las conversiones.",
    features: [
      "SEO y optimización para motores de búsqueda",
      "Campañas SEM y Google Ads",
      "Marketing en redes sociales (SMM)",
      "Email marketing y automatización",
      "Content marketing y estrategia de contenidos",
      "Analytics y reporting detallado",
      "Marketing de influencers y partnerships",
    ],
  },
  en: {
    title: "Digital Marketing",
    subtitle: "Digital strategies that drive your growth",
    description:
      "We develop comprehensive digital marketing strategies that connect your brand with your target audience. Our data-driven approach combines creativity with deep analysis to maximize the ROI of your campaigns. From SEO and SEM to social media marketing and email marketing, we create digital ecosystems that generate qualified leads and increase conversions.",
    features: [
      "SEO and search engine optimization",
      "SEM campaigns and Google Ads",
      "Social media marketing (SMM)",
      "Email marketing and automation",
      "Content marketing and content strategy",
      "Analytics and detailed reporting",
      "Influencer marketing and partnerships",
    ],
  },
};

const serviceContent = content[currentLang];
---

<ServicePage 
  lang={currentLang}
  title={serviceContent.title}
  subtitle={serviceContent.subtitle}
  description={serviceContent.description}
  features={serviceContent.features}
  image="/assets/img/service_3.jpeg"
  imageAlt="Digital Marketing Service"
/>